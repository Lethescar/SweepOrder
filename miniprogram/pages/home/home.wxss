/* pages/home/home.wxss */
.container .home-page{
  width: 100%;
}
  /********** 第一部分 **********/
  .home-page .page-section-one{
    height: 240px;
  }
  /* 轮播 */
  .home-page .page-section-one>swiper{
    height: 100%;
  }
  .home-page .page-section-one .slide-image{
    width: 100%;
  }
  /********** 第二部分 **********/
  .home-page .page-section-two{
    height: 97px;
  }
  /* 宫格 */
  .home-page .page-section-two .grid-list{
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: space-around;
  }
  .home-page .page-section-two .grid-list .grid-item{
    text-align: center;
    margin-top: 20px;
  }
  .home-page .page-section-two .grid-list .grid-item image{
    width: 38px;
    height: 38px;
  }
  .home-page .page-section-two .grid-list .grid-item text{
    display: block;
    font-size: 14px;
  }
  /*********** 第三部分 ***********/
  .home-page .page-section-three{
    background-color: #fff;
  }
  /* 标题 */
  .home-page .page-section-three .title_box{
    text-align: center;
    padding: 5px;
  }
  .home-page .page-section-three .title{
    letter-spacing: 8px;
  }
  /* 产品 */
  .home-page .page-section-three .rec_box{
    margin: 5px 5px;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }
  .home-page .page-section-three .pro-box{
    width: 49%;
    margin-bottom: 5px;
    background-color: #fff;
  }
  .home-page .page-section-three .pro-box image{
    height: 184px;
    width: 100%;
    display: inline-block;
  }
  .home-page .page-section-three .pro-box text{
    font-size: 14px;
    margin-left: 15px;
    margin-top: 8px;
  }
  .home-page .page-section-three .pro-box .bottom-box{
    display: flex;
    justify-content: space-between;
  }
  .home-page .page-section-three .pro-box .bottom-box .pro-price-box,.pro-sold{
    display: inline-block;
    color: #f44;
  }
  .home-page .page-section-three .pro-box .bottom-box .pro-price-box .pro-price{
    margin-left: 0px;
    display: inline-block;
  }
  .home-page .page-section-three .pro-box .bottom-box .pro-sold{
    margin-right: 15px;
    font-size: 11px;
    color: rgb(128, 128, 128);
  }
  /********** 第四部分 **********/
  .home-page .page-section-four{
    background-color: #fff;
  }
  /* 标题 */
  .home-page .page-section-four .title_box{
    text-align: center;
    padding: 5px;
    padding-bottom: 10px;
  }
  .home-page .page-section-four .title{
    letter-spacing: 8px;
  }
  .home-page .page-section-four text{
    padding: 5px 10px;
    display: block;
  }
  /* 图片 */
  .home-page .page-section-four .pic_box .pic-box{
    padding: 2px 10px;
  }
  .home-page .page-section-four .pic_box .pic-box image{
    width: 100%;
  }