.shop-page .page-section-one .show-empty text{
  display: block;
  text-align: center;
}
.hidden{
  display: none !important;
}
.page-section-two{
  background-color: #eee;
  height:100rpx;
  line-height: 100rpx;
  padding: 0 30rpx; 
}
.page-section-three .item-box{
  margin: 15rpx 0;
  height: 200rpx;
  background-color: rgba(238, 238, 238, 0.384);
  padding: 0 20rpx;
}
.page-section-three .item-box .item{
  /* margin: 15rpx 30rpx; */
  height: 200rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.page-section-three .item-box .item image{
  width: 160rpx;
  height: 160rpx;
  border-radius: 6px;
  margin: 0 20rpx 0 10rpx;
}
.page-section-three .item-box .stepper-box{
    display: flex;
    height: 45rpx;
    justify-content: flex-end;
    align-items: center;
}
.page-section-three .item-box .stepper-box input{
  background-color: rgba(221, 221, 221, 0.644);
  width: 45rpx;
  height: 45rpx;
  text-align: center;
}
.page-section-three .item-box .stepper-box .btn{
  border: 1px solid #ccc;
  width: 45rpx;
  text-align: center;
  line-height: 45rpx;
}
.page-section-three .item-box .stepper-box .btn:active{
  background-color: #cfcfcf81
}
.page-section-three .item-box .info-box{
  width: 430rpx;
}
.page-section-three .item-box .bottom-box{
    display: flex;
    height: 60rpx;
    justify-content: space-between;
}
.page-section-three .item-box .glsize{
  display: inline-block;
  padding: 0px 4px;
  border: 1px dashed #ccc;
}
.page-section-four{
  position: fixed;
  display: flex;
  bottom: 0;
  width: 100vw;
  height: 100rpx;
  background-color: #f5f5f5;
  z-index: 999;
}
.page-section-four .footerbar{
  width: 100vw;
  height: 100rpx;
  align-items: center;
  display: flex;
  margin: 0 30rpx;
  justify-content: space-between;
}
.page-section-four .footerbar .btn{
  background-color: orange;
  display: inline-block;
  padding: 5rpx 10rpx;
  border-radius: 35rpx;
  width: 125rpx;
  text-align: center;
  height: 56rpx;
  line-height: 56rpx;
}
.page-section-four .footerbar .btn:active{
  background-color: #ff51009d
}
.page-section-three .van-swipe-cell__right{
  width: 60px;
  text-align: center;
  line-height: 100px;
  background-color: red;
}