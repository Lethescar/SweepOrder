/* pages/search/search.wxss */
.header{
  padding: 30rpx;
  display: flex;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}
.header .search-box{
  display: flex;
  justify-content: space-between;
  flex: 1;
  background-color: #fafafa;
  border-radius: 5px;
  align-items: center;
}
.header .search-box .btn{
  padding: 0 6px;
}
.header .search-box input{
  border-radius: 5px;
  flex: 1;
  height: 80rpx;
  display: inline-block;
  background-color: #fafafa;
}
.header .scan-btn{
  margin-left: 30rpx;
}
.item-box{
  padding: 5px;
  display: flex;
  border: 1px solid #f5f5f5;
  border-radius:5px; 
  margin: 10px;
}
.item-box image{
  width: 250rpx;
  height: 200rpx;
  margin: 0 10px 0 5px;
}
.item-box .info-box .title{
  font-weight: bold;
  color: orange;
  padding-bottom: 20rpx;
  display: block;
}
.item-box .info-box .box .describe{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  width: 220rpx;
  display: block;
  font-size: 12px;
  color: #666;
  padding-bottom: 10rpx;
}
.item-box .info-box .box .price{
  color: #f44;
  font-size: 15px;
}
.item-box .info-box .box view{
  display: block;
}
.item-box .info-box .box .sold{
  color: #666;
  background-color: #eee;
  border-radius: 2px;
  display: inline-block;
  padding: 3px;
  font-size: 11px;
}